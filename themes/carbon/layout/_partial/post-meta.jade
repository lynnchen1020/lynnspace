mixin date(date)
  = date.format(config.date_format)

mixin extra(name, list)
  span(class=name)
    = __(name) + ': '
    if list && list.length > 0
      - var colon = false
      each item in list.toArray()
        if colon
          = ', '
        +extralink(item)
        - colon = true
      = '.'
    else
      = __('none') + '.'

mixin extralink(item)
  a(href=url_for(item.path))
    = item.name

mixin categories(name, list)
  ul.categories-list
    if list && list.length > 0
      each item in list.toArray()
        li(class=name)
          +extralink(item)
          = item.length